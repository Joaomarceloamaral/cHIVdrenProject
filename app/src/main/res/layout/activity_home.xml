<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:background="@drawable/bg"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/sair"
        android:layout_gravity="end"
        android:background="@drawable/sair2"/>

    <TextView
        android:id="@+id/welcomeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/andigiana"
        android:text="OlÃ¡, Seja Bem-Vindo(a) Nome !"
        android:textSize="20sp"
        android:layout_margin="20sp"
        android:textColor="#FFEB3B"/>

    <ImageButton
        android:id="@+id/remedios"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"

        android:background="@drawable/caixa"
        android:src="@drawable/pilula"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/caixa2"
        android:text="EU"
        android:id="@+id/eu"
        android:textSize="40sp"
        android:fontFamily="@font/andigiana"
        android:textColor="#FFEB3B"
        android:layout_marginTop="10dp"
        />
</LinearLayout>