<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MeusMedicamentosActivity">
    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/voltar"
        android:background="@drawable/voltar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/voltar"
        android:id="@+id/linearLayout2"
        android:orientation="horizontal">
        <TextView
            android:layout_below="@+id/voltar"
            android:id="@+id/memed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Meus medicamentos"
            android:layout_margin="20dp"
            android:textColor="#fff"
            android:fontFamily="@font/andigiana"/>

        <ImageButton

            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_below="@+id/postsRecyclerview"
            android:layout_toEndOf="@+id/postsRecyclerview"
            android:id="@+id/cadastrarMedbt"
            android:background="@drawable/elipse"
            android:src="@drawable/pilula"

            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/postsRecyclerview"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
android:layout_margin="20dp"
        android:layout_below="@+id/linearLayout2"

        />


</RelativeLayout>